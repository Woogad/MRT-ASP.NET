@model MRT_Demo.Models.ImportantIndicatorTargetMeasurement

@{
    bool IsDisabled = ViewBag.Disable;
}

@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.CreateDate)
@Html.HiddenFor(m => m.IsDelete)
@Html.HiddenFor(m => m.IndicatorID)
@Html.HiddenFor(m => m.IndicatorLevel)

@if (IsDisabled)
{
    @Html.EditorFor(m => m.Target, new { HtmlAttributes = new { type = "number", step = "any", disabled = "disabled" } })
    @Html.HiddenFor(m => m.Target)
}
else
{
    @Html.EditorFor(m => m.Target, new { HtmlAttributes = new { type = "number", step = "any" } })
}
