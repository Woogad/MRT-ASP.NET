@model MRT_Demo.Models.ForecastPeriodResultRemark

@Html.HiddenFor(m => m.ID)
@Html.HiddenFor(m => m.ForecastPeriodID)
@Html.HiddenFor(m => m.ForecastPeriodDocFile)
@Html.HiddenFor(m => m.ForecastAnalysisResultFile)
@Html.HiddenFor(m => m.ForecastChangeActionPlanFile)
@Html.HiddenFor(m => m.IsDelete)
@Html.HiddenFor(m => m.IsLastDelete)
@Html.HiddenFor(m => m.CreateDate)
