@model List<MRT_Demo.Models.SOEPlan>

@{
    ViewBag.Title = "RecycleBin";
}

<h2>RecycleBin SOEPlan</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>#ID</th>
                <th>วันที่ลบ</th>
                <th>ปี</th>
                <th>จัดการ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => i.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(m => i.UpdateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => i.StartYear)
                        -
                        @Html.DisplayFor(m => i.EndYear)
                    </td>
                    <td>
                        @Html.ActionLink("ยกเลิก", "Recover", new { id = i.ID }, new { @class = "mx-2" })
                        @Html.ActionLink("ลบ", "LastDelete", new { id = i.ID }, new { @class = "mx-2" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

